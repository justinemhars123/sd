import java.util.*;

public class ArrayOfScores {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Input the number of scores
        System.out.print("Enter the number of scores: ");
        int numScores = sc.nextInt();

        // Create an array to store the scores
        double[] scores = new double[numScores];

        // Input the scores
        for (int i = 0; i < numScores; i++) {
            System.out.print("Enter score #" + (i + 1) + ": ");
            scores[i] = sc.nextDouble();
        }

        // Sort the scores
        Arrays.sort(scores);
        System.out.println("\nSorted scores:");
        for(double i : scores){  
             
            System.out.println( i + " ");
        }

        // Calculate minimum, maximum, total, and average scores
        double minScore = scores[0];
        double maxScore = scores[numScores - 1];
        double totalScore = Arrays.stream(scores).sum();
        double avgScore = totalScore / numScores;

        // Display the results
        System.out.println("Minimum Score: " + minScore);
        System.out.println("Maximum Score: " + maxScore);
        System.out.println("Total Scores: " + totalScore);
        System.out.println("Average Score: " + avgScore);

        sc.close();
    }
}
